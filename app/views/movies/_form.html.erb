<%= form_with model: movie do |f|  %>
    <%= f.label 'Titulo' %>
    <%= f.text_field :title %>

    <%= f.label 'Ano de Lançamento' %>
    <%= f.text_field :year, type: "number" %>

    <%= f.label 'Sinopse' %>
    <%= f.text_area :synopsis %>

    <%= f.label 'País de Origem' %>
    <%= f.text_field :origin_country %>

    <%= f.label 'Duração (em minutos)' %>
    <%= f.text_field :movie_length, type: "number" %>

    <%= f.label 'Gênero' %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>

    <%= f.label 'Diretor do Filme' %>
    <%= f.collection_select :movie_director_id, MovieDirector.all, :id, :name %>

    <% if @type == "new" %>
        <%= f.label 'Tornar rascunho' %>
        <%= f.check_box :draft_status %>
    <% end %>
    <% if @type == "edit" %>
        <%= f.label 'Tornar rascunho' %>
        <%= f.check_box :draft_status, {}, "draft", "published" %>
    <% end %>

    <%= f.submit 'Salvar Filme' %>
<% end %>
