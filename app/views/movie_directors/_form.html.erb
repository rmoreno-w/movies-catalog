        <%= f.text_field :birth_date, type: "date" %>
    <% end %>
    <% if @type == "edit" %>
        <%= f.text_field :birth_date, type: "date", value: @movie_director.birth_date.strftime("%Y-%m-%d") %>
    <% end %>

